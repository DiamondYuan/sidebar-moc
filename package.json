{
  "name": "sidebar-moc",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:DiamondYuan/sidebar-moc.git",
  "author": "DiamondYuan <admin@diamondyuan.com>",
  "license": "MIT",
  "displayName": "SideBar Moc",
  "publisher": "DiamondYuan",
  "scripts": {
    "compile": "esbuild src/extension.ts --bundle --outfile=lib/extension.js  --external:vscode --format=cjs",
    "test": "yarn jest src/test/*.spec.ts",
    "build-pack": "npm run compile && vsce package"
  },
  "browser": "./lib/extension.js",
  "activationEvents": [
    "*"
  ],
  "engines": {
    "vscode": "^1.52.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "sidebar-moc.add-moc",
        "title": "Add MOC"
      },
      {
        "command": "sidebar-moc.open-uri",
        "title": "OpenURi"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "sidebar-moc.view",
          "visibility": "hidden",
          "name": "MOC"
        }
      ]
    },
    "configuration": [
      {
        "title": "Sidebar MOC",
        "properties": {
          "sidebar-moc.mocPath": {
            "type": "string"
          }
        }
      }
    ]
  },
  "dependencies": {
    "esbuild": "^0.12.26",
    "mdast-util-to-string": "^3.1.0",
    "remark-gfm": "^2.0.0",
    "remark-parse": "^10.0.0",
    "ts-jest": "^27.0.5",
    "unified": "^10.1.0",
    "unist-util-select": "^4.0.0",
    "vsce": "^1.99.0",
    "vscode-uri": "^3.0.2",
    "webpack": "^5.52.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@types/vscode": "^1.52.0",
    "babel-jest": "^27.1.1",
    "fixture-manager": "^0.0.3",
    "jest": "^27.1.1",
    "rollup": "^2.56.3",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  }
}
